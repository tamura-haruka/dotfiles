{
	"plugins": [
		"latex2e"
	],
	"filters": {
		"comments": true
	},
	"rules": {
		"preset-ja-technical-writing": {
			"max-kanji-continuous-len": false,
			"no-mix-dearu-desumasu": {
				"preferInHeader": "",
				"preferInBody": "である",
				"preferInList": "である",
				"strict": false,
				"max-ten": {
				  "touten": "、",
				  "kuten": "。"
				}
			},
			"ja-no-mixed-period": {
			  "periodMark": "。"
			}
		},
        "preset-jtf-style": {
            "1.2.1.句点(。)と読点(、)": false,
            "1.2.2.ピリオド(.)とカンマ(,)": false,
            "4.1.3.ピリオド(.)、カンマ(,)": false
        }
	}
}
